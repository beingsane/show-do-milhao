<div class="col-md-12 col-md-offset-0">
  <div class="portlet">
    <div class="page-header">
      <h2>Questões!</h2>
      <div class="text-right">
        <%= link_to raw('<span class="glyphicon glyphicon-plus"></span> Questão!'),
                    new_question_path, class: 'btn btn-primary white' %>
      </div>
    </div>
    <div class="portlet-content row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
            <tr>
              <th>Descrição</th>
              <th>Resposta Certa!</th>
              <th>Assunto</th>
              <th colspan="3">Opções</th>
            </tr>
            </thead>

            <tbody>
            <% @questions.each do |question| %>
                <tr>
                  <td><%= question.description %></td>
                  <td><%= question.correct_answer.title unless question.correct_answer.blank? %></td>
                  <td><%= question.subject.title %></td>
                  <td><%= link_to 'Exibir', question, class: 'btn btn-primary center-block' %></td>
                  <td><%= link_to 'Alterar', edit_question_path(question),
                                  class: 'btn btn-primary center-block' %></td>
                  <td><%= link_to 'Deletar', question, method: :delete,
                                  data: { confirm: 'Você tem certeza?' },
                                  class: 'btn btn-primary center-block' %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>