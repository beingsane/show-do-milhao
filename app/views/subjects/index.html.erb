<div class="col-md-12 col-md-offset-0">
  <div class="portlet">
    <div class="page-header">
      <h2>Assuntos!</h2>
      <div class="text-right">
        <%= link_to raw('<span class="glyphicon glyphicon-plus"></span> Assunto!'),
                    new_answer_path, class: 'btn btn-primary white' %>
      </div>
    </div>
    <div class="portlet-content row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
            <tr>
              <th>Título</th>
              <th colspan="3">Opções</th>
            </tr>
            </thead>

            <tbody>
            <% @subjects.each do |subject| %>
                <tr>
                  <td><%= subject.title %></td>
                  <td>
                    <%= link_to 'Exibir', subject,
                                class: 'btn btn-primary btn-sm center-block white' %>
                  </td>
                  <td>
                    <%= link_to 'Alterar', edit_subject_path(subject),
                                class: 'btn btn-primary btn-sm center-block white' %>
                  </td>
                  <td>
                    <%= link_to 'Deletar', subject, method: :delete,
                                data: { confirm: 'Tem certeza?' },
                                class: 'btn btn-danger btn-sm center-block white' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>