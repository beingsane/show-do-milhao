<div class="portlet-content">
  <%= form_for(@subject) do |f| %>
      <% if @subject.errors.any? %>
          <div class="alert alert-warning alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert">
              <span aria-hidden="true">&times;</span>
              <span class="sr-only">Close</span>
            </button>
            <strong>
              EEII, foram encontrados <%= pluralize(@subject.errors.count, 'erro') %>!
            </strong> e por isso você precisa corrigí-los antes de continuar!!

            <ul>
              <% @subject.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group col-md-12">
        <%= f.label :title, 'Titulo' %><br />
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.submit 'Salvar Assunto!', class: 'btn btn-success' %>
      </div>
  <% end %>
</div>